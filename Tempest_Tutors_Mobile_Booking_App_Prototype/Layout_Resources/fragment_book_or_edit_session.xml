<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_L4"
    android:orientation="vertical"
    tools:context=".BookOrEditSessionFragment">

    <TextView
        android:id="@+id/session_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CHOOSE TUTOR"
            android:layout_marginStart="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="50"/>

        <Spinner
            android:id="@+id/tutorName_dropdown"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CHOOSE INSTRUMENT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="50"/>

        <Spinner
            android:id="@+id/instrument_dropdown"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="50"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="DATE AND TIME"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/selectDate_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="50"
            android:hint="SELECT DATE"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/selectTime_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="50"
            android:hint="SELECT TIME"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="Autofill" />
    </LinearLayout>

    <Button
        android:id="@+id/finishBooking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_blue_D2"
        android:text=""
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancelBooking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_blue_D2"
        android:text="Cancel"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deleteSession_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/warning_red"
        android:text="Delete"
        android:textStyle="bold" />


</LinearLayout>